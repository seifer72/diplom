= form_for [@academic_work,@exam] do |f|
  - if @exam.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exam.errors.count, "error")} prohibited this exam from being saved:"
      %ul
        - @exam.errors.full_messages.each do |msg|
          %li= msg


  .field
    = f.label :disciplin_name
    = f.text_field :disciplin_name
  .field
    = f.label :time_start
    = f.date_select :time_start
  .field
    = f.label :time_end
    = f.date_select :time_end
  .field

    = f.label :report
    = f.text_area :report,:rows=>"3", :cols => "120"
  .actions
    = f.submit 'Сохранить'
