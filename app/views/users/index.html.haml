%h1 Cписок пользователей

%table.table.table-hover
  %tr
    %th Имя пользователя
    %th Email пользователя
    %th Доступ администратора
    %th Доступ сотрудника аспирантуры
    %th Доступ научного руководителя
    %th Доступ аспирантура
    %th Действие

  -@users.each do |user_x|
    %tr
      %td=user_x.name
      %td=user_x.email
      %td=true_false(user_x.admin_per)
      %td=true_false(user_x.worker_per)
      %td=true_false(user_x.chief_per)
      %td=true_false(user_x.aspirant_per)
      %td
        .btn-group
          = link_to "Редактировать",edit_user_path(user_x), :class => 'btn btn-mini btn-info',:style=>"width: 80%"
          %button.btn.btn-mini.btn-info.dropdown-toggle(data-toggle="dropdown")
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'Удалить', user_x, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn"
  %br
