= form_for @main_stage do |f|
  - if @main_stage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@main_stage.errors.count, "error")} prohibited this main_stage from being saved:"
      %ul
        - @main_stage.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :introduction_result_id
    = f.number_field :introduction_result_id
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :time_start
    = f.date_select :time_start
  .field
    = f.label :time_end
    = f.date_select :time_end
  .actions
    = f.submit 'Save'
