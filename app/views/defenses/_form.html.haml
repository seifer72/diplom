= form_for [@scientific_work,@defense] do |f|
  - if @defense.errors.any?
    #error_explanation
      %h2= "#{pluralize(@defense.errors.count, "error")} prohibited this defense from being saved:"
      %ul
        - @defense.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :time_start
    = f.date_select :time_start
  .field
    = f.label :time_end
    = f.date_select :time_end

  .field
    = f.label :report
    = f.text_area :report,:size => "30x5"
  .actions
    = f.submit 'Сохранить'
