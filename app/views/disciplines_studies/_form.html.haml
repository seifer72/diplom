= form_for [@academic_work,@disciplines_study] do |f|
  - if @disciplines_study.errors.any?
    #error_explanation
      %h2= "#{pluralize(@disciplines_study.errors.count, "error")} prohibited this disciplines_study from being saved:"
      %ul
        - @disciplines_study.errors.full_messages.each do |msg|
          %li= msg


  .field
    = f.label :disciplin_name
    = f.text_field :disciplin_name
  .field
    = f.label :time_start
    = f.date_select :time_start
  .field
    = f.label :time_end
    = f.date_select :time_end
  .field
    = f.label :report
    = f.text_area :report,:size => "30x5"
  .actions
    = f.submit 'Сохранить'
