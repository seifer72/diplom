= form_for @experiment do |f|
  - if @experiment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@experiment.errors.count, "error")} prohibited this experiment from being saved:"
      %ul
        - @experiment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :stages_work_id
    = f.number_field :stages_work_id
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :time_start
    = f.date_select :time_start
  .field
    = f.label :time_end
    = f.date_select :time_end
  .actions
    = f.submit 'Save'
