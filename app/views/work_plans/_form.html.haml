= form_for @work_plan do |f|
  - if @work_plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@work_plan.errors.count, "error")} prohibited this work_plan from being saved:"
      %ul
        - @work_plan.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :per_start
    = f.date_select :per_start
  .field
    = f.label :per_end
    = f.date_select :per_end
  .actions
    = f.submit 'Сохранить'
