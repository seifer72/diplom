= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :approbation_dissertation_id
    = f.number_field :approbation_dissertation_id
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :period
    = f.date_select :period
  .actions
    = f.submit 'Save'
